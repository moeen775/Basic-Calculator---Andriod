<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#000000"

        android:gravity="center">
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:text=""
            android:textColor="@color/white"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/inputtext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/b11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="invisible"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_0"
                />
          <ImageView
              android:id="@+id/b22"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"

              android:textColor="@color/white"
              android:gravity="center"
              android:textSize="40dp"



              />
            <ImageView
                android:id="@+id/multi"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_multiplication"/>

            <ImageView
                android:id="@+id/ac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_ac"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_1" />
            <ImageView
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_2"/>
            <ImageView
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_3"/>

            <ImageView
                android:id="@+id/devision"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_divide"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_4"
                />
            <ImageView
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_5"/>
            <ImageView
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_6"/>

            <ImageView
                android:id="@+id/bminus"
                android:layout_width="58dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_minus" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="70dp"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_7" />
            <ImageView
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_8"/>
            <ImageView
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_9"/>

            <ImageView
                android:id="@+id/bplus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_plus" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            >
            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="invisible"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_0"
                />
            <ImageView
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/btn_0"/>
            <ImageView
                android:id="@+id/dot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_dot"/>

            <ImageView
                android:id="@+id/equaltwo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:src="@drawable/btn_equal"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>